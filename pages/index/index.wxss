/* pages/index/index.wxss */
page{
  padding: 50rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
}
.btn{
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx;
  border-radius: 20rpx;
  box-shadow: 0rpx 0rpx 10rpx #ccc;
}
.navigator-hover{
  border-radius: 20rpx;  
}
.btnBody{
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  text-align: center;
}
.btnImg{
  height: 50rpx;
  width: 50rpx;
  margin: 50rpx 0 20rpx 0;
}
.btnText{
  display: block;
  font-size: 28rpx;
  color: #333;
}